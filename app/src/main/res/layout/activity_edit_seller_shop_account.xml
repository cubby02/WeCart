<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SellerHomeScreen.EditSellerShopAccount">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="80dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/sellerEditPhoto"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/Rounded"
                    app:strokeColor="@color/green_admin"
                    app:strokeWidth="4dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChooseSellerPhoto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/select_photo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/sellerEditPhoto"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/sellerEditPhoto"
                    app:layout_constraintTop_toTopOf="@+id/sellerEditPhoto"
                    app:layout_constraintVertical_bias="1.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="Change Shop Banner"
                android:textColor="@color/black_alt"
                android:fontFamily="@font/gilroy_medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gilroy_bold"
                android:text="Personal Information"
                android:textColor="@color/black_alt"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="@string/username"
                android:textColor="@color/black_alt" />

            <EditText
                android:id="@+id/editSellerUsername"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg"
                android:editable="false"
                android:ems="10"
                android:inputType="none"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/black_alt"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/store"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="@color/black_alt" />

            <EditText
                android:id="@+id/editStoreName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/black_alt"
                android:hint="Store Name"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/full_name"
                android:textColor="@color/black_alt"
                android:fontFamily="@font/gilroy_medium"/>

            <EditText
                android:id="@+id/editSellerFullName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/black_alt"
                android:hint="Full Name"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/email"
                android:textColor="@color/black_alt"
                android:fontFamily="@font/gilroy_medium" />

            <EditText
                android:id="@+id/editSellerEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/black_alt"
                android:hint="Email"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/contact_num"
                android:textColor="@color/black_alt"
                android:fontFamily="@font/gilroy_medium" />

            <EditText
                android:id="@+id/editSelllerContact"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/black_alt"
                android:hint="Contact Number"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Stall Number"
                android:textColor="@color/black_alt"
                android:fontFamily="@font/gilroy_medium" />

            <EditText
                android:id="@+id/editSellerSitio"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/black_alt"
                android:hint="Stall Number"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/change_pass"
                android:textColor="@color/black_alt"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChangepassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_bg"
                android:text="**********"
                android:paddingStart="15dp"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/black_alt"
                android:textSize="15sp"
                android:onClick="changePassword"/>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/updateSellerAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@color/title_white"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnClearFields"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_btn"
                android:fontFamily="@font/gilroy_bold"
                android:backgroundTint="@color/red"
                android:text="Clear"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/title_white"
                android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:adjustViewBounds="true"
        android:background="@drawable/topbar_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/green_admin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="Edit Profile"
        android:textAlignment="center"
        android:textColor="@color/title_white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/arrow_92_256"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>